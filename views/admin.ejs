<!DOCTYPE html>
<html>
<%- include('partial/head.ejs'); -%>
<script src="/js/admin.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@7.33.1/dist/sweetalert2.all.min.js"></script>
<link href="//cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.css" rel="stylesheet">
<script src="//cdn.jsdelivr.net/timepicker.js/latest/timepicker.min.js"></script>
<body>
<header>
    <h1>Churning Mods!</h1>
</header>
<div id="admincontainer">
    <div class="scheduled-posts">
        <ul id="posts">
        </ul>
    </div>
    <div id="post-info" class="hidden">
        <div class="textinput">
            <label for="title">Title</label>
            <input type="text" id="title" placeholder="Post title">
        </div>
        <div class="textinput">
            <label for="body" class="Input-label">Body</label>
            <textarea type="text" id="body" class="Input-text" placeholder="Post body"></textarea>
        </div>
        <div>
            <span class="custom-dropdown big">
                <select id="frequency">
                    <option>Daily</option>
                    <option selected>Weekly</option>
                </select>
            </span>
            <span class="custom-dropdown big" id="day-container">
                <select id="day">
                    <option>Monday</option>
                    <option>Tuesday</option>
                    <option>Wednesday</option>
                    <option>Thursday</option>
                    <option>Friday</option>
                    <option>Saturday</option>
                    <option>Sunday</option>
                </select>
            </span>
            <span>
                <label for="appt">Time to post (PST):</label>
                <input type="text" id="time" placeholder="Time">
            </span>
        </div>
        <div><a id="save" href="#">Save</a></div>
    </div>
    <div><a id="new" class="new">New Post</a> <a class='new' href="/logs">Logs</a></div>
</div>
<%- include('partial/footer.ejs'); -%>
</body>
</html>
